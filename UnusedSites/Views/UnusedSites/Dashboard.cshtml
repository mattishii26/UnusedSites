@model List<UnusedSites.Models.Site>
<div class="group">
    <aside class="featured-narrative text-center">
        <h1>Unused Sites Program</h1>
    </aside>
</div>

<div class="group">
    <div class="btn-row">
        <button onclick="location.href='@Url.Action("AddSite", "UnusedSites")';return false;" class="btn btn-primary">ADD NEW UNUSED SITE</button>
    </div>
</div>

<div class="group">
    <div class="row">
        <div class="half text-left">
            Show X entries dropdown
        </div>
        <div class="half text-right" style="padding-bottom: 5px;">
            <input type="text" placeholder="Search..."/>
        </div>
    </div>
</div>

<div class="group">
    <div class="table-responsive">
        <table class="table table-default">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>District</th>
                    <th>SITE NAME</th>
                    <th>STATUS</th>
                    <th>YEAR LAST USED</th>
                    <th>CURRENT VALUE</th>
                    <th>GRADE LEVEL</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @Html.ActionLink(item.District, "District", "UnusedSites", new {id = item.District})
                        </td>
                        <td>
                            @Html.ActionLink(item.Name, "Site", "UnusedSites", new {id = item.Name})
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            @item.YearLastUsed
                        </td>
                        <td>
                            $@item.CurrentValue
                        </td>
                        <td>
                            @item.GradeLevel
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="group">
    <div class="row">
        <div class="half text-left">
            Shoowing 1 to x of Y entries
        </div>
        <div class="half text-right">
            Previous 1 2 3 4 5 Next
        </div>
    </div>
</div>