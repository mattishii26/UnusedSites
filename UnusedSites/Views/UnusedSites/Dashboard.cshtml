<script>
    $(document).ready(function () {
        $("#filterDistrict").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#dashboardUnusedSites tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>