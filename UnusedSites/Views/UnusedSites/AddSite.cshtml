<div class="group">
    <aside class="featured-narrative text-center">
        <h1>Unused Sites Program - Add a Site</h1>
    </aside>
</div>
<div class="panel panel-overstated">
    <div class="panel-heading text-center">
        <h3>Unused Site Information</h3>
    </div>
    <div class="panel-body">
        <div class="row form-group">
            <div class="third">
                <label for="schoolDistrictName">
                    <span class="required-label">*</span>SCHOOL DISTRICT
                </label>
            </div>
            <div class="two-thirds">
                <input type="text" class="form-control" id="schoolDistrictName" placeholder="Enter School District">
            </div>
        </div>
        <div class="row form-group">
            <div class="third">
                <label for="schoolCountyName">
                    <span class="required-label">*</span>COUNTY
                </label>
            </div>
            <div class="two-thirds">
                <input type="text" class="form-control" id="schoolCountyName" placeholder="Enter County">
            </div>
        </div>
        <div class="row form-group">
            <div class="third">
                <label for="schoolSiteName">
                    <span class="required-label">*</span>SITE NAME
                </label>
            </div>
            <div class="two-thirds">
                <input type="text" class="form-control" id="schoolSiteName" placeholder="Enter Site Name">
            </div>
        </div>
