@model UnusedSites.Models.District
<div class="group">
    <aside class="featured-narrative text-center">
        <h1>@Model.Name</h1>
    </aside>
</div>
<div class="btn-row text-left">
    <button onclick="location.href='@Url.Action("AddSite", "UnusedSites")';return false;" class="btn btn-primary">ADD NEW UNUSED SITE</button>
    <button class="btn btn-primary">EDIT DISTRICT</button>
    <button onclick="location.href='@Url.Action("Dashboard", "UnusedSites")';return false;" class="btn btn-primary">BACK</button>
</div>
<div class="row">
    <div class="half">
        <p>
            <b>ID:</b> @Model.Id<br />
            <b>Name:</b> @Model.Name<br />
            <b>Contact:</b> @Model.Contact_Salt @Model.Contact_FName @Model.Contact_LName<br />
            <b>Contact Phone Number:</b> @Model.Contact_PNumber<br />
            <b>Date Sent:</b> @Model.Date_Sent<br />
            <b>Date Received:</b> @Model.Date_Received
        </p>
    </div>
    <div class="quarter offset-quarter">
        <div class="form-group">
            <input type="text" class="form-control" id="filterDistrict" placeholder="Filter Unused Sites">
        </div>
    </div>
</div>
