@model UnusedSites.Models.District
<div class="group">
    <aside class="featured-narrative text-center">
        <h1>Unused Sites Program</h1>
    </aside>
</div>

<div class="group">
    <div class="btn-row">
        <button class="btn btn-primary">ADD NEW UNUSED SITE</button>
    </div>
</div>

<div class="group">
    <div class="row">
        <div class="half text-left">
            Show X entries dropdown
        </div>
        <div class="half text-right" style="padding-bottom: 5px;">
            <input type="text" placeholder="Search..." />
        </div>
    </div>
</div>

<div class="group">
    <div class="table-responsive">
        <table class="table table-default">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>DISTRICT NAME</th>
                    <th>SITE NAME</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.Name
                    </td>
                    <td>
                        @Model.Dist
                    </td>
                    <td>
                        @Model.Name
                    </td>
                    <td>
                        @Model.Status
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table table-default">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>DISTRICT Name</th>
                    <th>SITE NAME</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Sites)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.District
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Status
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="group">
    <div class="row">
        <div class="half text-left">
            Shoowing 1 to x of Y entries
        </div>
        <div class="half text-right">
            Previous 1 2 3 4 5 Next
        </div>
    </div>
</div>