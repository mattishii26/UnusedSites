    <aside class="featured-narrative text-center">
        <h1>@Model.Name District</h1>
    </aside>
</div>

<div class="group">
    <div class="btn-row">
        <button class="btn btn-primary">ADD NEW UNUSED SITE</button>
        <input style="float: right;"type="text" placeholder="Search..." />
    </div>
</div>

